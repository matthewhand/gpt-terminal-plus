# Base image for all CLI services
FROM node:18-slim

# Install common dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    && apt-get clean

# Set work directory
WORKDIR /app

# Upgrade pip
RUN pip3 install --upgrade pip

# Print a warning if API_TOKEN is not detected in the .env
RUN if [ -z "$API_TOKEN" ]; then echo "WARNING: API_TOKEN not detected. Ensure it is provided in the docker-compose file."; fi

# Copy package.json and package-lock.json
COPY package*.json ./

# Install Node.js dependencies
RUN npm install --legacy-peer-deps

# Copy the rest of the application code
COPY . .

# Build the application
RUN npm run build

# Command to run the application
CMD ["node", "dist/index.js"]