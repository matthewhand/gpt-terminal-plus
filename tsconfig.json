{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": true, // Enables incremental compilation
    "skipLibCheck": true, // Skips type checking for declaration files
    "downlevelIteration": true, // Optimizes iteration handling
    "noEmitOnError": true // Prevents emitting files on compilation errors
  },
  "include": [
    "src/**/*"
  ],
  "files": [
    "./src/types/express.d.ts",
    "./src/global.d.ts"
  ],
  "paths": {
    "@handlers/*": ["src/handlers/*"],
    "@utils/*": ["src/utils/*"]
  }
}
