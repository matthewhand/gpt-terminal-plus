{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "files": [
    "src/types/express.d.ts",
    "src/global.d.ts"
  ]
}

