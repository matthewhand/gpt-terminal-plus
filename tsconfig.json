{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs", // Change to "esnext" if using ES modules
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "files": [
    "src/types/express.d.ts",
    "src/global.d.ts"
  ]
}
